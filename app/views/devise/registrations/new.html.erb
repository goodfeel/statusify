<div class="col-lg-10 col-lg-offset-1">
  <h2>Sign up</h2>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal' }) do |f| %>
    <%= devise_error_messages! %>
    <%= f.input :username, input_html: { class: "form-control" }, autofocus: true %>
    <%= f.input :email, input_html: { class: "form-control" } %>
    <%= f.input :password, input_html: { class: "form-control" }, autocomplete: "off" %>
    <%= f.input :password_confirmation, input_html: { class: "form-control" }, autocomplete: "off" %>
    <%= f.input :location, input_html: { class: "form-control" }, autocomplete: "off" %>
    <%= f.input :bio, input_html: { class: "form-control" }, autocomplete: "off" %>

    <br />
    <div><%= f.submit "Sign up", class: "btn btn-success" %></div>
  <% end %>
</div>
