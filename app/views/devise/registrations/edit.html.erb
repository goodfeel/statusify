<div class="col-lg-12 well">
  <h2>Edit <%= resource_name.to_s.humanize %></h2>
  <div class="col-lg-12">
    Please note: your avatar will be pulled from <a href="https://en.gravatar.com/" target="_blank">Gravatar</a>
    <br /><br />
  </div>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <div class="col-lg-12">
      <%= f.input :email, autofocus: true, input_html: { class: 'form-control col-lg-12' } %>
    </div>

    <div class="col-lg-12">
      <%= f.input :password, autocomplete: "off", input_html: { class: 'form-control col-lg-12' } %>
      <i>(leave blank if you don't want to change it)</i>
    </div>

    <div class="col-lg-12">
      <%= f.input :password_confirmation, autocomplete: "off", input_html: { class: 'form-control col-lg-12' } %>
    </div>

    <div class="col-lg-12">
      <br />
      <%= f.input :current_password, autocomplete: "off", input_html: { class: 'form-control col-lg-12' } %>
      <br /><i>(we need your current password to confirm your changes)</i>
    </div>

    <div class="col-lg-12">
      <%= f.input :location, input_html: { class: 'form-control col-lg-12' } %>
    </div>

    <div class="col-lg-12">
      <%= f.input :bio, as: :text, input_html: { class: 'form-control col-lg-12' } %>
    </div>

    <div class="col-lg-12">
      <br /><br />
      <%= f.submit "Update", class: 'btn btn-sm btn-success' %>
    </div>
  <% end %>
</div>
